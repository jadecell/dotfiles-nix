#!/usr/bin/env sh

if [ -n "$(sed "s/.*/ğŸ”’/" /sys/class/net/wg*/operstate 2> /dev/null)" ]; then
	pidof transmission-daemon && notify-send "ğŸ”’Mullvad VPN" "Please stop transmisson-daemon before trying that." && exit 0
        mullvad disconnect
	notify-send "ğŸ”“Mullvad VPN" "Disconnected from mullvad's network"
else
        mullvad connect
	notify-send "ğŸ”Mullvad VPN" "Connected to mullvad's network"
fi
