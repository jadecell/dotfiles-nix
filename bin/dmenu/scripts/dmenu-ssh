#!/usr/bin/env bash

# Source all the settings
. ${NIXOS_CONFIG_DIR}bin/dmenu/settings

declare options=("quit
seedbox
mccrory.xyz")

choice=$(echo -e "${options[@]}" | dmenu $DMENU_ARGUMENTS -p 'SSH to: ')

case "$choice" in
    seedbox)
        kitty -e kitty +kitten ssh jadecell@server1355.seedhost.eu
    ;;
    quit)
        echo "Program terminated." && exit 1
    ;;
    *)
       kitty -e kitty +kitten ssh "$(whoami)@$choice"
    ;;
esac
