#!/bin/sh
# A dmenu wrapper script for system functions.
ctl="systemctl"
case "$(printf "ğŸšªleave dwm\nğŸ”’lock\n â™» renew dwm\nğŸ»hibernate\nğŸ’¤sleep\nğŸ”ƒreboot\nğŸ”ƒfirmware reboot\n ğŸ–¥shutdown\nğŸ“º display off" | dmenu -i -p 'Action: ')" in
'ğŸšªleave dwm') kill -9 "$(pidof dwm)" ;;
'ğŸ”’lock') slock ;;
'â™» renew dwm') kill -HUP "$(pgrep -u "$USER" "\bdwm$")" ;;
'ğŸ»hibernate') slock $ctl hibernate ;;
'ğŸ’¤sleep') slock $ctl suspend ;;
'ğŸ”ƒreboot') $ctl reboot ;;
'ğŸ”ƒfirmware reboot') $ctl reboot --firmware ;;
'ğŸ–¥shutdown') shutdown ;;
'ğŸ“ºdisplay off') xset dpms force off ;;
*) exit 1 ;;
esac
